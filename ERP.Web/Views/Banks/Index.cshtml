@section Scripts
{
    <script src="~/Assets/JSCustom/Bank.js"></script>
    <script>
        $(document).ready(function () {
            Bank_Module.init();
            $('#kt_datatable_search_query').on('keyup', function () {
                $('#kt_datatable').DataTable().search(this.value).draw();
            });
            $('#CountryId').on('change', function () {
                var textSelected = $("#CountryId option:selected").text();
                if ($("#CountryId option:selected").val() === "") {
                    textSelected = "";
                }
                $('#kt_datatable').DataTable().search(textSelected).draw();
            });
            $('#CityId').on('change', function () {
                var textSelected = $("#CityId option:selected").text();
                if ($("#CityId option:selected").val() === "") {
                    textSelected = "";
                }
                $('#kt_datatable').DataTable().search(textSelected).draw();
            });
        });
    </script>

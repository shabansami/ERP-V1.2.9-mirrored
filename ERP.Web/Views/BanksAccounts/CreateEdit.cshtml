

@model ERP.DAL.BankAccount
@using ERP.DAL

@{ ViewBag.Title = "CreateEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string title, btn = string.Empty, icon = string.Empty, icon2 = string.Empty;
    if (Model.Id == Guid.Empty)
    {
        title = "اضافة حساب بنك جديد";
        btn = "اضافة";
        icon = "fa fa-plus-circle m-1";
    }
    else
    {
        title = "تعديل حساب بنك ";
        btn = "تعديل";
        icon = "fa fa-edit m-1";
        icon2 = "fa-solid fa-caret-left m-1";
    } }

@section PageTitle1{حسابات البنوك}
@section PageTitle2{@title }
@section Button1{ادارة حساب البنك}
@section Button1Link{/BanksAccounts/Index}
@section icon{<i class="fa fa-cog m-1"></i>}

<div class="row">
    <div class="col-12">
        <div class="card din-bold">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-6">
                        <h4 class=" din-bold"> @title </h4>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("CreateEdit", "BanksAccounts", FormMethod.Post, new { id = "form1" }))
            {
<div class="card-body">

    <div class="row">

        <div class="col-lg-6">
            <div class="form-group required">
                <label>مسمى البنك</label>
                @Html.DropDownList("BankId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-select   select2 din-med" })
                @Html.HiddenFor(model => model.Id)
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group required">
                <label>مسمى حساب البنك</label>
                @Html.TextBoxFor(m => m.AccountName, new { @class = "form-control" , @style = "text-align:right;" })
            </div>
        </div>

        <div class="col-lg-6">
            <div class="form-group required">
                <label>رقم الحساب</label>
                @Html.TextBoxFor(m => m.AccountNo, new { @class = "form-control" , @style = "text-align:right;" })
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>IBAN</label>
                @Html.TextBoxFor(m => m.IBAN, new { @class = "form-control" , @style = "text-align:right;" })
            </div>
        </div>

        <div class="col-lg-6">
            <div class="form-group">
                <label>Swift Code</label>
                @Html.TextBoxFor(m => m.SwiftCode, new { @class = "form-control" , @style = "text-align:right;" })
            </div>
        </div>
    </div>
</div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12" style="text-align:left;">
                            @*<input type="button" onclick="BankAccount_Module.SubmitForm(this);" value="@btn" class="btn btn-primary font-weight-bold btn-square btn-shadow din-bold w-100px" />*@
                            <a href="javascript:void(0);" onclick="BankAccount_Module.SubmitForm(this);" class="btn btn-primary font-weight-bold btn-square btn-shadow din-bold w-100px"><i class="@icon"></i>@btn</a>
                            @if (Model.Id != Guid.Empty)
                            {
            <a href="/BanksAccounts/Index" class="btn btn-text-primary btn-hover-light-primary btn-square font-weight-bold mr-2 din-bold w-100px"><i class="@icon2"></i>عودة</a>}
                        </div>
                    </div>
                </div>}
        </div>
    </div>
    @if (Model.Id == Guid.Empty && ViewBag.LastRow != null)
    {
        var modl = ViewBag.LastRow as BankAccount;

<div class="col-lg-12">
    <div class="card card-custom gutter-b">

        <div class="card-header">
            <div class="card-title">
                <h3 class="card-label">اخر بيان تم اضافته</h3>
            </div>
        </div>
        <div class="card-body">
            <!--begin::Example-->
            <div class="example mb-10">
                <table class="table table-hover mb-6">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">البنك</th>
                            <th scope="col"> اسم الحساب</th>
                            <th scope="col">رقم الحساب</th>
                            <th scope="col"> IBAN</th>
                            <th scope="col">SwiftCode</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>@modl.Bank.Name</td>
                            <td>@modl.AccountName</td>
                            <td>@modl.AccountNo</td>
                            <td>@modl.IBAN</td>
                            <td>@modl.SwiftCode</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!--end::Example-->
        </div>
    </div>
</div>}
</div>

@section Scripts
{
    <script src="~/Assets/JSCustom/BankAccount.js"></script>
}



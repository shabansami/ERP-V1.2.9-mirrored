    <script>
        $(document).ready(function () {
            const params = new URLSearchParams(window.location.search);
            if (params.has('returnUrl')) {
                $("#returnUrlVal").val(params.get('returnUrl'));
            };
            //localStorage.setItem("logo", "https://zumurda.system-clouds.com/Assets/media/logos/black-logo.png");
            //localStorage.setItem("logo", "https://demo1.vts-co.com/Assets/media/logos/black-logo.png");
            //localStorage.setItem("logo", "https://ysrnewtree.system-clouds.com/Assets/media/logos/black-logo.png");
            localStorage.setItem("logo", "http://vts.local.com/Assets/media/logos/black-logo.png");
        });

    </script>
    @{
        if (@ViewBag.MsgBadLogin != null)
        {
            <script>
                $(document).ready(function () {
                /**/
                toastr.error('@ViewBag.MsgBadLogin', '')
                    /**/
                });
            </script>
        }
        if (TempData["MsgErrorActive"] != null)
        {
            <script>
                $(document).ready(function () {
                /**/
                toastr.error('@TempData["MsgErrorActive"]', '')
                    /**/
                });
            </script>
        }
        if (TempData["MsgSuccessActive"] != null)
        {
            <script>
                $(document).ready(function () {
                /**/
                toastr.success('@TempData["MsgSuccessActive"]', '')
                    /**/
                });
            </script>
        }

    }

    <script>
        function cancelDiv() {
            $('#loginDiv').show();
            $('#loginForgot').hide();
        }
        function activeDiv() {
            $('#loginDiv').hide();
            $('#loginForgot').show();
        }
    </script>

</body>

</html>
   
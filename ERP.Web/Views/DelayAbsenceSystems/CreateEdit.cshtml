
@model ERP.DAL.DelayAbsenceSystem
@using ERP.DAL

@{
    ViewBag.Title = "CreateEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--begin::Content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-2">
                <!--begin::Page Title-->
                <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5 din-bold">انظمة التأخير/الغياب</h5>
                <!--end::Page Title-->
                <!--begin::Actions-->
                <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-4 bg-gray-200"></div>
                <span class="text-muted font-weight-bold mr-4 din-med din-bold">اضافة نظام تأخير/غياب </span>

                <!--end::Actions-->
            </div>
            <!--end::Info-->
            <!--<div class="d-flex align-items-center">-->
                <!--begin::Actions-->
                <!--<a href="/DelayAbsenceSystems/Index"
                   class="btn btn-primary font-weight-bold btn-square font-weight-bold font-size-base mr-1 din-bold"><i class="fa fa-cog m-1"></i>ادارة دولة</a>-->
                <!--end::Actions-->
            <!--</div>-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container-fluid">
            <!--begin::Dashboard-->
            <!--begin::Row-->
            <div class="row din-bold">
                <div class="col-12">
                    <div class="card card-custom gutter-b">
                        <div class="card-header">
                            <div class="card-title">
                                <h3 class="card-label">اضافة نظام تأخير/غياب</h3>
                            </div>
                        </div>
                        @using (Html.BeginForm("CreateEdit", "DelayAbsenceSystems", FormMethod.Post, new { id = "form1" }))
                        {
                            <div class="card-body">

                                <div class="row">

                                    <div class="col-lg-12">
                                        <div class="form-group required">
                                            <label>نوع النظام</label>
                                            <select class="form-control" id="systemType" onchange="DelayAbsenceSystem_Module.systemTypeChanged()">
                                                <option value>اختر عنصر من القائمة</option>
                                                <option value="1" selected>التأخير</option>
                                                <option value="2">الغياب</option>
                                            </select>
                                            @Html.HiddenFor(model => model.Id)
                                            @Html.HiddenFor(model => model.IsDelay)
                                        </div>
                                    </div>
                                    <div class="row col-lg-12 alert alert-primary" id="divDelay">
                                        <div class="col-lg-6">
                                            <div class="form-group required">
                                                <label>عدد دقائق التأخير</label>
                                                @Html.DropDownList("DelayMinNumber", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-control din-med" })

                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group required">
                                                <label>عدد ساعات الخصم</label>
                                                @Html.TextBoxFor(m => m.DelayHourPenalty, null, htmlAttributes: new { @class = "form-control", @type = "number" })
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-lg-6" id="divAbsense" style="display:none">
                                        <div class="form-group required">
                                            <label>عدد ايام الخصم لليوم الواحد غياب</label>
                                            @Html.TextBoxFor(m => m.AbsenceDayPenalty, null, htmlAttributes: new { @class = "form-control", @type = "number" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="row">
                                    <div class="col-12">
                                        @*<input type="button" onclick="DelayAbsenceSystem_Module.SubmitForm(this);" value="@btn" class="btn btn-primary font-weight-bold btn-square btn-shadow din-bold w-100px" />*@

                                        <a href="javascript:void(0);" onclick="DelayAbsenceSystem_Module.SubmitForm(this);" class="btn btn-primary font-weight-bold btn-square btn-shadow din-bold w-100px"><i class="fa fa-plus-circle m-1"></i>اضافة</a>
                                        @if (Model.Id != Guid.Empty)
                                        {
                                            <a href="/DelayAbsenceSystems/Index" class="btn btn-text-primary btn-hover-light-primary btn-square font-weight-bold mr-2 din-bold w-100px"><i class="fa-solid fa-caret-left  m-1"></i>عودة</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        }


                    </div>


                </div>
            </div>
            <!--end::Container-->
        </div>
        <!--end::Entry-->
    </div>
</div>
@section Scripts
{
    <script src="~/Assets/JSCustom/DelayAbsenceSystem.js"></script>
}



@model ERP.DAL.GeneralRecord
@using ERP.DAL
@{ ViewBag.Title = "CreateEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string title, btn = string.Empty, icon = string.Empty;

    if (Model.Id == Guid.Empty)
    {
        title = "اضافة قيد حر جديد";
        btn = "اضافة";
        icon = "fa fa-plus-circle m-1";
    }
    else
    {
        title = "تعديل قيد حر جديد ";
        btn = "تعديل";
        icon = "fa fa-edit m-1";
    } }

@section PageTitle1{القيود الحرة}
@section PageTitle2{@title }
@section Button1{ادارة قيد حر}
@section Button1Link{/GeneralRecords/Index}
@section icon{<i class="fa fa-cog m-1"></i>}
<div class="row">
    <div class="col-12">
        <div class="card din-bold">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-6">
                        <h4 class=" din-bold">@title</h4>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("CreateEdit", "GeneralRecords", FormMethod.Post, new { id = "form1" }))
            {
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>الفرع</label>
                                @Html.DropDownList("BranchId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-select  " })
                                @Html.HiddenFor(model => model.Id)
                                @Html.HiddenFor(model => model.AccountTreeFromId)
                                @Html.HiddenFor(model => model.AccountTreeToId)
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group required">
                                <label>تاريخ المعاملة</label>
                                @Html.TextBoxFor(m => m.TransactionDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group required">
                                <label> من الحساب</label>
                                <input style="text-align:right;" name="accountFrom" type="text" class="form-control" id="accountFrom" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group required">
                                <label> إلي الحساب</label>
                                <input style="text-align:right;" name="accountTo" type="text" class="form-control" id="accountTo" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-6 required">
                            <div class="form-group required">
                                <label>المبلغ</label>
                                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", @type = "number", @step = "0" })
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label> البيان</label>
                                @Html.TextAreaFor(m => m.Notes, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12" style="text-align:left;">
                            @*<input type="button" onclick="GeneralRecord_Module.SubmitForm(this);" value="@btn" class="btn btn-primary font-weight-bold btn-square btn-shadow din-bold w-100px" />*@
                            <a href="javascript:void(0);" onclick="GeneralRecord_Module.SubmitForm(this);" class="btn btn-primary font-weight-bold btn-square btn-shadow din-bold w-100px"><i class="@icon"></i>@btn</a>
                            <a href="/GeneralRecords/Index" class="btn btn-text-primary btn-hover-light-primary btn-square font-weight-bold mr-2 din-bold w-100px"><i class="fa-solid fa-caret-left m-1"></i>عودة</a>
                        </div>
                    </div>
                </div>}
        </div>
    </div>
    @if (Model.Id == Guid.Empty && ViewBag.LastRow != null)
    {
        var modl = ViewBag.LastRow as GeneralRecord;
        var accFrom = modl.AccountTreeFromId != null ? modl.AccountTreeFrom.AccountName : null;
        var accTo = modl.AccountTreeToId != null ? modl.AccountTreeTo.AccountName : null;

        <div class="col-lg-12">
            <div class="card card-custom gutter-b">
                <div class="card-header">
                    <div class="card-title">
                        <h3 class="card-label">اخر بيان تم اضافته</h3>
                    </div>
                </div>
                <div class="card-body">
                    <!--begin::Example-->
                    <div class="example mb-10">
                        <table class="table table-hover mb-6">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">من الحساب</th>
                                    <th scope="col">الي الحساب</th>
                                    <th scope="col"> المبلغ</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>@accFrom</td>
                                    <td>@accTo</td>
                                    <td>@modl.Amount</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!--end::Example-->
                </div>
            </div>
        </div>}
</div>
@section Scripts
{
    <script src="~/Assets/JSCustom/GeneralRecord.js"></script>
    <script>
        var treeFrom;
        var treeTo;
        $(document).ready(function () {
            $.get("/SharedDataSources/GetAccountsTrees", { selectedTree: false, showAllLevel:true}, function (data) {
                treeFrom.setSource(data);
                treeTo.setSource(data);
            })

            // من الحساب
            var dsFrom = [];
            treeFrom = $('#accountFrom').comboTree({
                source: dsFrom,
                isMultiple: false,
                collapse: true,
                selected:['@Model.AccountTreeFromId']
                //selectableLastNode: true

            });
            treeFrom.onChange(function () {
                if (treeFrom.getSelectedIds()!=null) {
                    $('#AccountTreeFromId').val(treeFrom.getSelectedIds()[0]);

                }
            });

            // الى الحساب
            var dsTo = [];
            treeTo = $('#accountTo').comboTree({
                source: dsTo,
                isMultiple: false,
                collapse: true,
                selected:['@Model.AccountTreeToId']
                //selectableLastNode: true

            });
            treeTo.onChange(function () {
                if (treeTo.getSelectedIds()!=null) {
                    $('#AccountTreeToId').val(treeTo.getSelectedIds()[0]);

                }
            });
        })
    </script>
}



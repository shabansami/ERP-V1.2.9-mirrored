
@model ERP.DAL.Area
@using ERP.DAL
@{ ViewBag.Title = "CheckInventoryType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section PageTitle1{الاعدادات}
@section PageTitle2{نوع الجرد}
@section Button1{@null}
@section Button1Link{@null}
@section icon{@null}
<div class="row">
    <div class="col-12">
        <div class="card din-bold">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-6">
                        <h4 class=" din-bold">نوع الجرد</h4>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("CheckInventoryType", "GeneralSettings", FormMethod.Post, new { id = "form1" }))
            {
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group required">
                                <label>نوع الجرد</label>
                                <select class = "form-select din-med" id="InventoryTypeId" name="InventoryTypeId">
                                    <option value="1">جرد دورى</option>
                                    <option value="2">جرد مستمر</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12" style="text-align:left;">
                            <a href="javascript:void(0);" onclick="GeneralSetting_Module.SubmitFormInventoryType(this);" class="btn btn-primary font-weight-bold btn-square btn-shadow din-bold w-100px"><i class="@icon"></i>@btn</a>
                        </div>
                    </div>
                </div>}
        </div>
    </div>
    @if (Model.Id == Guid.Empty && ViewBag.LastRow != null)
    {
        var modl = ViewBag.LastRow as Area;

        <div class="col-lg-12">
            <div class="card card-custom gutter-b">
                <div class="card-header">
                    <div class="card-title">
                        <h3 class="card-label">اخر بيان تم اضافته</h3>
                    </div>
                </div>
                <div class="card-body">
                    <!--begin::Example-->
                    <div class="example mb-10">
                        <table class="table table-hover mb-6">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">الدولة</th>
                                    <th scope="col">المحافظة</th>
                                    <th scope="col">المدينة</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>@modl.City.Country.Name</td>
                                    <td>@modl.City.Name</td>
                                    <td>@modl.Name</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!--end::Example-->
                </div>
            </div>
        </div>}
</div>
@section Scripts
{
    <script src="~/Assets/JSCustom/Area.js"></script>

}


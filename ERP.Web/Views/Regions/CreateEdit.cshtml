
@model ERP.DAL.Region
@using ERP.DAL

@{
    /**/

    ViewBag.Title = "CreateEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string title, btn = string.Empty, icon = string.Empty;
    if (Model.Id == Guid.Empty)
    {
        title = "اضافة منطقة جديدة";
        btn = "اضافة";
        icon = "fa fa-plus-circle m-1";
    }
    else
    {
        title = "تعديل منطقة ";
        btn = "تعديل";
        icon = "fa fa-edit m-1";
    } }
@section PageTitle1{المناطق}
@section PageTitle2{@title }
@section Button1{ادارة منطقة}
@section Button1Link{/Regions/Index}
@section icon{<i class="fa fa-cog m-1"></i>}
<div class="row">
    <div class="col-12">
        <div class="card din-bold">
            <div class="card-header">

                <h4 class=" din-bold">@title</h4>

            </div>
            @using (Html.BeginForm("CreateEdit", "Regions", FormMethod.Post, new { id = "form1" }))
            {
                <div class="card-body">

                    <div class="row">

                        <div class="col-lg-6">
                            <div class="form-group required">
                                <label>الدولة</label>
                                @Html.DropDownList("CountryId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-control select2 din-med", @onchange = "Region_Module.onCountryChange()" })
                                @Html.HiddenFor(model => model.Id)
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group required">
                                <label>المحافظة</label>
                                @Html.DropDownList("CityId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-control select2 din-med", @onchange = "Region_Module.onCityChange()" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group required">
                                <label>المدينة</label>
                                @Html.DropDownList("AreaId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-control select2 din-med" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group required">
                                <label>المنطقة</label>
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12">
                            <a href="javascript:void(0);" onclick="Region_Module.SubmitForm(this);" class="btn btn-primary font-weight-bold btn-square btn-shadow din-bold w-100px"><i class="@icon"></i>@btn</a>
                            @if (Model.Id != Guid.Empty)
                            {
                                <a href="/Regions/Index" class="btn btn-text-primary btn-hover-light-primary btn-square font-weight-bold mr-2 din-bold w-100px"><i class="fa-solid fa-caret-left m-1"></i>عودة</a>
                            }
                        </div>
                    </div>
                </div>
            }


        </div>


    </div>
    @if (Model.Id == Guid.Empty && ViewBag.LastRow != null)
    {
        var modl = ViewBag.LastRow as Region;

        <div class="col-lg-12">
            <div class="card card-custom gutter-b">

                <div class="card-header">
                    <div class="card-title">
                        <h3 class="card-label">اخر بيان تم اضافته</h3>
                    </div>
                </div>
                <div class="card-body">
                    <!--begin::Example-->
                    <div class="example mb-10">
                        <table class="table table-hover mb-6">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">الدولة</th>
                                    <th scope="col">المحافظة</th>
                                    <th scope="col">المدينة</th>
                                    <th scope="col">المنطقة</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>@modl.Area.City.Country.Name</td>
                                    <td>@modl.Area.City.Name</td>
                                    <td>@modl.Area.Name</td>
                                    <td>@modl.Name</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!--end::Example-->
                </div>
            </div>
        </div>

    }
</div>
<!--end::Container-->
        </div>
<!--end::Entry-->
    </div>
</div>
@section Scripts
{
    <script src="~/Assets/JSCustom/Region.js"></script>
}



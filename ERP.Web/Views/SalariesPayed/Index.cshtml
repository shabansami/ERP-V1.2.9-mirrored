@using ERP.Web.Utilites
@model  ERP.Web.ViewModels.SalaryPayedVM
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
@section PageTitle1{صرف رواتب الموظفين}
@section PageTitle2{استعراض}
@section Button1{@null}
@section Button1Link{@null}
@section icon{@null}
<div class="row">
    <div class="col-12">
        <div class="card din-bold">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-6">
                        <h4 class=" din-bold">الموظفين</h4>
                    </div>

                    <div class="col-sm-6">
                        <div class="fa-pull-left">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="svg-icon svg-icon-md">
                                        <!--begin::Svg Icon | path:assets/media/svg/icons/Design/PenAndRuller.svg-->
                                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                <rect x="0" y="0" width="24" height="24" />
                                                <path d="M3,16 L5,16 C5.55228475,16 6,15.5522847 6,15 C6,14.4477153 5.55228475,14 5,14 L3,14 L3,12 L5,12 C5.55228475,12 6,11.5522847 6,11 C6,10.4477153 5.55228475,10 5,10 L3,10 L3,8 L5,8 C5.55228475,8 6,7.55228475 6,7 C6,6.44771525 5.55228475,6 5,6 L3,6 L3,4 C3,3.44771525 3.44771525,3 4,3 L10,3 C10.5522847,3 11,3.44771525 11,4 L11,19 C11,19.5522847 10.5522847,20 10,20 L4,20 C3.44771525,20 3,19.5522847 3,19 L3,16 Z" fill="#000000" opacity="0.3" />
                                                <path d="M16,3 L19,3 C20.1045695,3 21,3.8954305 21,5 L21,15.2485298 C21,15.7329761 20.8241635,16.200956 20.5051534,16.565539 L17.8762883,19.5699562 C17.6944473,19.7777745 17.378566,19.7988332 17.1707477,19.6169922 C17.1540423,19.602375 17.1383289,19.5866616 17.1237117,19.5699562 L14.4948466,16.565539 C14.1758365,16.200956 14,15.7329761 14,15.2485298 L14,5 C14,3.8954305 14.8954305,3 16,3 Z" fill="#000000" />
                                            </g>
                                        </svg>
                                        <!--end::Svg Icon-->
                                    </span> تصدير الى<i class="mdi mdi-chevron-down"></i>
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a href="#" class="dropdown-item" id="export_print">
                                        <i class="fa fa-print"></i>
                                        طباعة
                                    </a>
                                    <a href="#" class="dropdown-item" id="export_excel">
                                        <i class="fa fa-file-excel"></i>
                                        <span>إكسل</span>
                                    </a>
                                    <a href="#" class="dropdown-item" id="export_copy">
                                        <span>
                                            <i class="fa fa-copy"></i>
                                        </span>
                                        <span>نسخ</span>
                                    </a>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            @using (Html.BeginForm("Index", "SalariesPayed", FormMethod.Post, new { id = "form1" }))
            {
        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group mb-0 w-100">
                                        <div class="input-icon input-icon-right">
                                            <label>بحث</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" style="text-align:start;" id="kt_datatable_search_query" placeholder="ادخل كلمة البحث">
                                                <div class="input-group-text"><i class="bx bx-search-alt align-middle"></i></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group mb-0 w-100">
                                        <div>
                                            <label> نوع العقد</label>
                                            @Html.DropDownList("ContractSalaryTypId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-select   din-med" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group mb-0 w-100">
                                        <div>
                                            <label>الإدارة</label>
                                            @Html.DropDownList("DepartmntId", null, "كل الادارات", htmlAttributes: new { @class = "form-control din-med" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group mb-0 w-100">
                                        <div>
                                            <label> التاريخ :  <span class="alert alert-danger"> الصرف (الشهرى) يتم اختيار اى يوم من الشهر-(الاسبوعى) يتم اختيار اى يوم من الاسبوع - (اليومى) يتم اختيار اليوم المراد صرفه</span></label>
                                            @Html.TextBoxFor(m => m.dt, "{0:yyyy-MM-dd}", htmlAttributes: new { @class = "form-control din-med", @type = "date" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group mb-0 w-100">
                                        <div>
                                            <label style="margin-top:30px;"> .</label>
                                            <a href="javascript:document.getElementById('form1').submit();" class="btn btn-primary font-weight-bold btn-square btn-shadow din-bold w-100"><i class="bx bx-search-alt m-1"></i>بحث</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @if (Model.ContractSchedulings.Count > 0)
                            {
            <div class="row alert alert-warning">
                <div class="col-lg-3">
                    <div class="form-group mb-0 w-100">
                        <div>
                            <label> تاريخ الصرف </label>
                            <input type="date" id="dtPayed" class="form-control din-med" value="@Utility.GetDateTime().ToString("yyyy-MM-dd")" />
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group required">
                        <label>الفرع</label>
                        @Html.DropDownList("BranchId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-select   din-med", @onchange = "SalariesPayed_Module.getSafesOnBranchChanged();" })
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>خزينة</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">$</span>
                            </div>
                            @Html.DropDownList("SafeId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-select   din-med", @aria_label = "Text input with radio" })
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <label class="radio radio-single radio-primary">
                                        <input type="radio" name="radios2" id="rdo_safe" checked onchange="SalariesPayed_Module.onRdoSafeChanged();" />
                                        <span></span>
                                    </label>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>بنك</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">$</span>
                            </div>
                            @Html.DropDownList("BankAccountId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-select   din-med" })
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <label class="radio radio-single radio-primary">
                                        <input type="radio" name="radios2" id="rdo_bank" onchange="SalariesPayed_Module.onRdoBankChanged();" />
                                        <span></span>
                                    </label>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>}

                            <table class="table table-separate table-head-custom table-foot-custom table-checkable" id="kt_dtPayed">
                                <thead>
                                    <tr>
                                        <th style="display:none;">Id</th>
                                        <th>الموظف</th>
                                        <th>الشهر/الاسبوع/اليوم</th>
                                        <th>صافى الراتب</th>
                                        <th>المبلغ المدفوع</th>
                                        <th>المبلغ المتبقى</th>
                                        @if (Model.ContractSchedulings.Where(x => x.IsApproval && !x.IsPayed).Any())
                                        {
                        <th>عمليات</th>}
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ContractSchedulings)
                                    {
                                        var payedId = "payedId" + item.Id;
                                        var remindId = "remindId" + item.Id;
                                        var safyId = "safyId" + item.Id;
                                        var readOnly = "";
                                        if (item.IsApproval && item.IsPayed)
                                        {
                                            readOnly = "readonly";
                                        }
                    <tr>
                        <td style="display:none;">@item.Id</td>
                        <td>@item.EmployeeName</td>
                        <td>@item.SchedulingName</td>
                        <td>
                            <label id=@safyId>@item.Safy</label>
                        </td>
                        <td>
                            <input type="number" @readOnly class="form-control" id=@payedId onkeyup="SalariesPayed_Module.Calculation(@item.Id)" value="@item.Safy" />
                        </td>
                        <td>
                            <input type="number" readonly class="form-control" id=@remindId value="@item.RemindValue" />
                        </td>
                        @if (item.IsApproval && !item.IsPayed)
                        {
        <td>
            <div class="btn-group">
                <a href="javascript:;" onclick=SalariesPayed_Module.SalaryPaid('@item.Id',this) class="btn btn-sm btn-clean btn-icUrln" title="صرف الراتب">
                    <i class="fa fa-money-bill"></i>
                </a>
            </div>
        </td>}

                    </tr>}
                                </tbody>
                                <tfoot></tfoot>
                            </table>

                        </div>}
        </div>
        </div>

    </div>

@section Scripts
{
    @if (ViewBag.Msg != null)
    {
<script>
            $(document).ready(function () {
                toastr.error('@ViewBag.Msg', '')
            });
</script>
}
    <script src="~/Assets/JSCustom/SalariesPayed.js"></script>
    <script>
        $(document).ready(function () {
            SalariesPayed_Module.init();
            $("#BankAccountId").attr('disabled', 'disabled');
            $('#kt_datatable_search_query').on('keyup', function () {
                $('#kt_datatable').DataTable().search(this.value).draw();
            });
        });

    </script>
}











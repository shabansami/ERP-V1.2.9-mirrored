@model ERP.DAL.StoresTransfer
@using ERP.Web.Utilites
@{
    ViewBag.Title = "ShowDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@section PageTitle1{استعراض عملية تحويل مخزنى}
@section PageTitle2{ملخص العملية }
@section Button1{استعراض كل عمليات التحويل المخزنى}
@section Button1Link{/SaleMenStoreTransfers/Index}
@section icon{<i class="fa fa-cog m-1"></i>}

<div class="row">
    <div class="col-12">
        <div class="card din-bold">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-6">
                        <h4 class=" din-bold">تحويل مخزنى</h4>
                        <div class="d-flex flex-column align-items-md-end px-0">
                            <!--begin::Logo-->
                            <a href="#" class="mb-5">
                                <img src="~/Assets/media/logos/logo-light.png" alt="" />
                            </a>
                            <!--end::Logo-->
                            <span class="text-white d-flex flex-column align-items-md-end opacity-70">
                                <span class="din-bold">@Model.Notes</span>
                                <span></span>
                            </span>
                        </div>
                    </div>
                    <div class="border-bottom w-100 opacity-20"></div>
                    <div class="d-flex justify-content-between text-white pt-6">
                        <div class="d-flex flex-column flex-root">
                            <span class="font-weight-bolde mb-2r din-bold ylow">تاريخ العملية</span>
                            <span class="din-bold">@Model.TransferDate</span>
                        </div>
                        <div class="d-flex flex-column flex-root">
                            <span class="font-weight-bolder mb-2 din-bold ylow">من فرع</span>
                            <span class="din-bold">@Model.StoreFrom.Branch.Name</span>
                        </div>
                        <div class="d-flex flex-column flex-root">
                            <span class="font-weight-bolder mb-2 din-bold ylow">من مخزن</span>
                            <span class="din-bold">
                                @Model.StoreFrom.Name
                            </span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between text-white pt-6">
                        @{
                            string saleMenTitle = string.Empty;
                            string saleMenName = string.Empty;
                            if (Model.ForSaleMen)
                            {
                                saleMenTitle = "اسم المندوب";
                                saleMenName = Model.EmployeeTo.Person.Name;
                            }
                        }

                        <div class="d-flex flex-column flex-root">
                            <span class="font-weight-bolde mb-2r din-bold ylow">@saleMenTitle</span>
                            <span class="din-bold">@saleMenName</span>
                        </div>

                        <div class="d-flex flex-column flex-root">
                            <span class="font-weight-bolde mb-2r din-bold ylow">الى فرع</span>
                            <span class="din-bold">@Model.StoreTo.Branch.Name</span>
                        </div>
                        <div class="d-flex flex-column flex-root">
                            <span class="font-weight-bolder mb-2 din-bold ylow">الي مخزن</span>
                            <span class="din-bold">@Model.StoreTo.Name</span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end: Invoice header-->
            <!-- begin: Invoice body-->
            <div class="row justify-content-center py-8 px-8 py-md-10 px-md-0">
                <div class="col-md-9">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="pl-0 font-weight-bold text-muted text-uppercase din-bold">الصنف</th>
                                    <th class="text-right font-weight-bold text-muted text-uppercase din-bold">الكمية</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.StoresTransferDetails)
                                {
                                    <tr class="font-weight-boldest font-size-lg">
                                        <td class="pl-0 pt-7 din-bold">@item.Item.Name</td>
                                        <td class="text-right pt-7 din-bold">@item.Quantity</td>
                                        @*<td class="text-danger pr-0 pt-7 text-right din-bold">@item.Amount</td>*@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- end: Invoice body-->
            <!-- begin: Invoice footer-->
            <div class="border-bottom w-100 opacity-20"></div>
            <div class="border-bottom w-100 opacity-20"></div>

            <!-- end: Invoice footer-->
            <!-- begin: Invoice action-->
            <div class="row justify-content-center py-8 px-8 py-md-10 px-md-0">
                <div class="col-md-9">
                    <div class="d-flex justify-content-between">
                        @*<button type="button" class="btn btn-light-primary font-weight-bold din-bold" onclick="window.print();">Download Invoice</button>*@
                        <button type="button" class="btn btn-primary font-weight-bold din-bold" onclick="window.print();">طباعة</button>
                        <a href="#" onclick="window.history.back()" class="btn btn-text-primary btn-hover-light-primary btn-square font-weight-bold mr-2 din-bold w-100px"><i class="fa-solid fa-caret-left  m-1"></i>عودة</a>

                    </div>
                </div>
            </div>
            <!-- end: Invoice action-->
            <!-- end: Invoice-->
        </div>
    </div>
    <!-- end::Card-->
</div>

@section Scripts
{
    <script src="~/Assets/JSCustom/SaleMenStoreTransfer.js"></script>
    <script>
        $(document).ready(function () {
            SaleMenStoreTransfer_Module.init();
        });
    </script>
}














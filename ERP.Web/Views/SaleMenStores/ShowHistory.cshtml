@model ERP.DAL.Employee
@{ ViewBag.Title = "ShowHistory";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


@section PageTitle1{تعريف مخازن المناديب}
@section PageTitle2{حالات تغيير مخزن مندوب}
@section Button1{@null}
@section Button1Link{@null}
@section icon{@null}
<div class="row">
    <div class="col-12">
        <div class="card din-bold">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-6">
                        <h4 class=" din-bold">حالات تغيير مخزن مندوب</h4>
                    </div>
                </div>
             </div>
                <div class="card-body">

                    <div class="row">

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>الادارة</label>
                                @Html.TextBoxFor(m => m.Department.Name, new { @class = "form-control", @style = "text-align:right;", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>المندوب</label>
                                @Html.TextBoxFor(m => m.Person.Name, new { @class = "form-control", @style = "text-align:right;", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <table class="table table-bordered dt-responsive  nowrap w-100" id="kt_dtable">
                                <thead>
                                    <tr>
                                        <th>المخزن</th>
                                        <th>التاريخ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var status in Model.SaleMenStoreHistories)
                                    {
                        <tr>
                            <td>@status.Store.Name</td>
                            <td>@status.TransferDate</td>
                        </tr>
}
                                </tbody>
                                <tfoot></tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12"  style="text-align:left;">
                            @*<input type="button" onclick="Bank_Module.SubmitForm(this);" value="@btn" class="btn btn-primary font-weight-bold btn-square btn-shadow din-bold w-100px" />*@
                            <a href="#" onclick="window.history.back()" class="btn btn-text-primary btn-hover-light-primary btn-square font-weight-bold mr-2 din-bold w-100px"><i class="fa-solid fa-caret-left m-1"></i>عودة</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts
{

    <script src="~/Assets/JSCustom/SaleMenStore.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#kt_dtable');

            // begin first table
            table.DataTable({
                paging: false,
                info: false,
                search: false,
                searching: false,
                "order": [[0, "asc"]]
                //"order": [[0, "desc"]]

            });
        });


    </script>
}






        <div class="col-lg-6">
            <div class="form-group required">
                <label>المبلغ المتبقى</label>
                @Html.TextBoxFor(m => m.RemindValue, new { @class = "form-control", @onkeyup = "SellInvoicePayment_Module.calcPayValue()" })
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group required">
                <label>المدة بالاشهر</label>
                @Html.TextBoxFor(m => m.Duration, new { @class = "form-control", @type = "number", @onkeyup = "SellInvoicePayment_Module.calcPayValue()" })
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group required">
                <label>قيمة الدفعة</label>
                @Html.TextBoxFor(m => m.PayValue, new { @class = "form-control", @type = "number" })
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group required">
                <label>تاريخ اول دفعة</label>

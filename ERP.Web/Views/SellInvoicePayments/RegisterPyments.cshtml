@model ERP.Web.ViewModels.SellInvoicePaymentVM
@using ERP.DAL

@{ ViewBag.Title = "RegisterPyments";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool anyIsPayed = false;
    if (Model.sellInvoicePayments.Where(x => x.IsPayed).Any() || ViewBag.Pay != null)
    {
        anyIsPayed = true;

    } }


@section PageTitle1{دفعات فاتورة بيع}
@section PageTitle2{تسجيل دفعات لفاتورة}
@section Button1{ادارة دفعات فواتير الاجل}
@section Button1Link{/SellInvoicePayments/Index}
@section icon{<i class="fa fa-cog m-1"></i>}
<div class="row">
    <div class="col-12">
        <div class="card din-bold">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-6">
                        <h4 class=" din-bold">تسجيل دفعات لفاتورة</h4>
                    </div>
                </div>
            </div>
            <div class="card-body">

                <div class="row">

                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>رقم الفاتورة</label>
                            @Html.TextBoxFor(m => m.SellInvoiceId, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>العميل</label>
                            @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>تاريخ الفاتورة</label>
                            @Html.TextBoxFor(m => m.InvoiceDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>صافى الفاتورة</label>
                            @Html.TextBoxFor(m => m.Safy, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>المبلغ المتبقى</label>
                            @Html.TextBoxFor(m => m.RemindValue, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    @if (anyIsPayed)
                    {
        <div class="col-lg-4">
            <div class="form-group required">
                <label>الخزنة</label>
                @Html.DropDownList("SafeId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-control din-med" })
            </div>
        </div>}

                </div>
            </div>


        </div>


    </div>
</div>

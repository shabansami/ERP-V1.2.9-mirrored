@{
    ViewBag.Title = "CreateEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string title, btn, icon = string.Empty;
    var generalAccount = Lookups.GeneralIncomes;

    double totalValue = 0;   // اجمالى الفاتورة (البيع)
    double totalQuantity = 0;   // اجمالى العدد (البيع)
    double totalItemDiscount = 0; // اجمالى الخصومات على الاصناف
    double totalExpenses = 0; // اجمالى الايرادات
    double totalDiscount = 0; // اجمالى الخصومات على كل الفاتورة
    double safy = 0; // صافى الفاتورة
    string safeVisiable = "none";
    string accountVisiable = "none";
    string checkedAttrSafe = "";
    string checkedAttrAccount = "";
    string showDiv = "none";
    string displayDiscount = "none";
    string isInvoiceDisVal = "true";
    string chkValRdo = "checked";
    string chkPerRdo = "";
    string disabledAttrSafeAccount = "";

    totalValue = Model.TotalValue;
    totalQuantity = Model.TotalQuantity;
    safy = Model.Safy;

    if (Model.Id == Guid.Empty)
    {
        title = "تسجبل فاتورة بيع";
        btn = "اضافة";
        icon = "flaticon2-add";
        chkValRdo = "checked";
        chkPerRdo = "";
        disabledAttrSafeAccount = "disabled";
    }
    else
    {
        if (Model.SafeId != null)
        {
            safeVisiable = "block";
            checkedAttrSafe = "checked";
        }
        else if (Model.BankAccountId != null)
        {
            accountVisiable = "block";
            checkedAttrAccount = "checked";
        }
        if (Model.BySaleMen)
        {
            showDiv = "flex";
        }
        if (Model.DiscountPercentage > 0)
        {
            displayDiscount = "block";
            isInvoiceDisVal = "false";
            chkValRdo = "";
            chkPerRdo = "checked";
        }
        title = "تعديل فاتورة بيع ";
        btn = "تعديل";
        icon = "flaticon-edit";
        totalItemDiscount = Model.SellInvoicesDetails.Where(x => !x.IsDeleted).Select(x => x.ItemDiscount).Sum();
        totalExpenses = Model.TotalExpenses;
        totalDiscount = Model.TotalDiscount;
    }
    bool shwTab = ViewBag.ShowTab;

}

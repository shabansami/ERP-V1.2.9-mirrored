    title = "اضافة اذن صرف";
    btn = "حفــظ اذن الصرف";
    icon = "fa fa-plus-circle m-1";
    @*}
        else
        {
            title = "تعديل رصيد أو المدة ";
            btn = "تعديل";
            icon = "flaticon-edit";
        }*@

                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a href="#" class="dropdown-item" id="export_print">
                                        <i class="fa fa-print"></i>
                                        طباعة
                                    </a>
                                    <a href="#" class="dropdown-item" id="export_excel">
                                        <i class="fa fa-file-excel"></i>
                                        <span>إكسل</span>
                                    </a>
                                    <a href="#" class="dropdown-item" id="export_copy">
                                        <span>
                                            <i class="fa fa-copy"></i>
                                        </span>
                                        <span>نسخ</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row  alert alert-primary">
                    <div class="col-lg-3">
                        <div class="form-group mb-0 w-100">
                            <div>
                                <label>الفرع</label>
                                @Html.DropDownList("BranchFromId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-select   din-med", @onchange = "StoresTransfer_Module.getStoresOnBranchFromChanged();" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group mb-0 w-100">
                            <div>
                                <label>من مخزن</label>
                                @Html.DropDownList("StoreFromId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-select   din-med" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group mb-0 w-100">
                            <div>
                                <label>الفرع</label>
                                @Html.DropDownList("BranchToId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-select   din-med", @onchange = "StoresTransfer_Module.getStoresOnBranchToChanged();" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group mb-0 w-100">
                            <div>
                                <label>إلي مخزن</label>
                                @Html.DropDownList("StoreToId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-select   din-med" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row  alert alert-primary">
                    <div class="col-lg-3">
                        <div class="form-group mb-0 w-100">
                            <div>
                                <label> تاريخ التحويل من </label>
                                @*<input type="date" class="form-control din-med" id="dtFrom" />*@
                                @Html.TextBox("dtFrom", ERP.Web.Utilites.Utility.GetDateTime(), "{0:yyyy-MM-dd}", htmlAttributes: new { @class = "form-control din-med", @type = "date" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group mb-0 w-100">
                            <div>
                                <label> تاريخ التحويل إلي </label>
                                @*<input type="date" class="form-control din-med" id="dtTo" />*@
                                @Html.TextBox("dtTo", ERP.Web.Utilites.Utility.GetDateTime(), "{0:yyyy-MM-dd}", htmlAttributes: new { @class = "form-control din-med", @type = "date" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group mb-0 w-100">
                            <div>
                                <label> حالة الاعتماد المخزنى</label>
                                <select class="form-control din-med" id="cmbo_approvalStore" name="cmbo_approvalStore">
                                    <option value=>الكل</option>
                                    <option value="1">فى الانتظار</option>
                                    <option value="2">تم الاعتماد المخزنى</option>
                                    <option value="3">تم الرفض المخزنى</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group mb-0 w-100">
                            <div>
                                <label>التحويل لمناديب</label>
                                <select class="form-control din-med" id="cmbo_forSaleMen" name="cmbo_forSaleMen">
                                    <option value=>الكل</option>
                                    <option value="1">مندوب</option>
                                    <option value="2">بدون مناديب</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group mb-0 w-100">
                            <div>
                                <label> .</label>
                                <button class="btn btn-primary font-weight-bold btn-square btn-shadow din-bold w-100" onclick="StoresTransfer_Module.onSearch()">بحث<span><i class="bx bx-search-alt m-1-1 icon-md"></i></span></button>
                            </div>
                        </div>
                    </div>
                    <table class="table table-separate table-head-custom table-foot-custom table-checkable" id="kt_datatable">
                        <thead>
                        </thead>
                        <tbody></tbody>
                        <tfoot></tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/Assets/JSCustom/StoresTransfer.js"></script>
    <script>
        $(document).ready(function () {
            StoresTransfer_Module.init();
            $('#kt_datatable_search_query').on('keyup', function () {
                $('#kt_datatable').DataTable().search(this.value).draw();
            });

            $('#cmbo_StoreTranType').on('change', function () {
                var textSelected = $("#cmbo_StoreTranType option:selected").text();
                if ($("#cmbo_StoreTranType option:selected").val() === "") {
                    textSelected = "";
                }
                $('#kt_datatable').DataTable().column(3).search(textSelected).draw();
            });

        });
    </script>
}






 @model ERP.Web.ViewModels.UserVM @using ERP.DAL  @{ ViewBag.Title = "CreateEdit";     Layout = "~/Views/Shared/_Layout.cshtml";     string title, btn = string.Empty, icon = string.Empty, icon2 = string.Empty;     if (Model.Id == Guid.Empty)     {         title = "اضافة مستخدم جديد";         btn = "اضافة";         icon = "fa fa-plus-circle m-1";     }     else     {         title = "تعديل مستخدم ";         btn = "تعديل";         icon = "fa fa-edit m-1";         icon2 = "fa-solid fa-caret-left m-1";     } }  @section PageTitle1{المستخدمين} @section PageTitle2{@title } @section Button1{ادارة المستخدمين} @section Button1Link{/UserRoles/Index} @section icon{<i class="fa fa-cog m-1"></i>}  <div class="row">     <div class="col-12">         <div class="card din-bold">             <div class="card-header">                 <div class="row">                     <div class="col-sm-6">                         <h4 class=" din-bold">  @title </h4>                     </div>                 </div>             </div>             @using (Html.BeginForm("CreateEdit", "UserRoles", FormMethod.Post, new { id = "form1" }))             { <div class="card-body">     @{ var num = "4";         if (Model.Id.ToString() != "")         {             num = "6";         } }     <div class="row">         <div class="col-lg-@num">             <div class="form-group  required">                 <label>الصلاحية/المجموعة</label>                 @Html.DropDownList("RoleId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-select    din-med" })             </div>         </div>         <div class="col-lg-@num">             <div class="form-group required">                 <label>اسم المستخدم</label>                 @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @style = "text-align:right;" })                 @Html.HiddenFor(m => m.Id)             </div>         </div>         @if (Model.Id == Guid.Empty)         { <div class="col-lg-4">     <div class="form-group  required">         <label>كلمة المرور</label>         @Html.TextBoxFor(m => m.Pass, new { @class = "form-control", @type = "password", @style = "text-align:right;" })     </div> </div>}          <div class="col-lg-6">             <div class="form-group ">                 <label>الادارة</label>                 @Html.DropDownList("DepartmentId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-select   select2 din-med", @onchange = "UserRole_Module.getEmployeesDepartmentChange()" })             </div>         </div>         <div class="col-lg-6">             <div class="form-group required">                 <label>الموظف</label>                 @Html.DropDownList("EmployeeId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-select   select2 din-med" })              </div>         </div>         <div class="col-lg-6">             <div class="form-group ">                 <label>حالة التفعيل</label>                 <div> @Html.CheckBoxFor(m => m.IsActive, new { @style = "width: 25px; height: 25px;" })</div>             </div>         </div>     </div> </div>                 <div class="card-footer">                     <div class="row">                         <div class="col-12" style="text-align:left;">                             @*<input type="button" onclick="Country_Module.SubmitForm(this);" value="@btn" class="btn btn-primary font-weight-bold btn-square btn-shadow din-bold w-100px" />*@                              <a href="javascript:void(0);" onclick="UserRole_Module.SubmitForm(this);" class="btn btn-primary font-weight-bold btn-square btn-shadow din-bold w-100px"><i class="@icon"></i>@btn</a>                             @if (Model.Id != Guid.Empty)                             {             <a href="/UserRoles/Index" class="btn btn-text-primary btn-hover-light-primary btn-square font-weight-bold mr-2 din-bold w-100px"><i class="@icon2"></i>عودة</a>}                         </div>                     </div>                 </div>}         </div> </div>     @if (Model.Id == Guid.Empty && ViewBag.LastRow != null)     {         var modl = ViewBag.LastRow as User;         var nam = modl.Person == null ? null : modl.Person.Name; <div class="col-lg-12">     <div class="card card-custom gutter-b">         <div class="card-header">             <div class="card-title">                 <h3 class="card-label">اخر بيان تم اضافته</h3>             </div>         </div>         <div class="card-body">             <!--begin::Example-->             <div class="example mb-10">                 <table class="table table-hover mb-6">                     <thead>                         <tr>                             <th scope="col">#</th>                             <th scope="col">اسم المستخدم</th>                             <th scope="col">اسم الموظف</th>                             <th scope="col">الصلاحية/المجموعة</th>                         </tr>                     </thead>                     <tbody>                         <tr>                             <th scope="row">1</th>                             <td scope="row">@modl.UserName</td>                             <td scope="row">@nam</td>                             <td>@modl.Role.Name</td>                         </tr>                     </tbody>                 </table>             </div>             <!--end::Example-->         </div>     </div> </div>} </div>  @section Scripts {     <script src="~/Assets/JSCustom/UserRole.js"></script> }


@model ERP.DAL.Voucher
@using ERP.DAL

@{ ViewBag.Title = "CreateEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string title, btn = string.Empty, icon = string.Empty, icon2 = string.Empty;

    if (Model.Id == Guid.Empty)
    {
        title = "تسجيل سند قبض";
        btn = "اضافة";
        icon = "fa fa-plus-circle m-1";
    }
    else
    {
        title = "تعديل سند قبض ";
        btn = "تعديل";
        icon = "fa fa-edit m-1";
        icon2 = "fa-solid fa-caret-left m-1";
    } }

@section PageTitle1{سندات قبض نقدية}
@section PageTitle2{@title }
@section Button1{ادارة سندات قبض}
@section Button1Link{/VoucherReceipts/Index}
@section icon{<i class="fa fa-cog m-1"></i>}

<div class="row">
    <div class="col-12">
        <div class="card din-bold">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-6">
                        <h4 class=" din-bold"> @title</h4>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("CreateEdit", "VoucherReceipts", FormMethod.Post, new { id = "form1" }))
            {
<div class="card-body">

    <div class="row">
        <div class="col-lg-6">
            <div class="form-group required">
                <label>تاريخ العملية </label>
                @Html.TextBoxFor(m => m.VoucherDate, "{0:yyyy-MM-dd}", htmlAttributes: new { @class = "form-control din-med", @type = "date" })
                @Html.HiddenFor(m => m.Id)
                @*@Html.HiddenFor(m => m.RowGuid)*@
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group required">
                <label>الفرع</label>
                @Html.DropDownList("BranchId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-select   din-med" })
            </div>
        </div>

        <div class="col-lg-4">
            <div class="form-group required">
                <label>من حساب</label>
                @Html.DropDownList("AccountTreeFromId", null, "اختر عنصر من القائمة", htmlAttributes: new { @class = "form-select   din-med" })
            </div>
        </div>
        <div class="col-lg-4">
            <!--begin::Input-->
            <div class="form-group required">
                <label> الى حساب</label>
                <input style = "text-align:right;" name="accountTreeTo" placeholder="اختر من حساب" type="text" class="form-control alert alert-success" id="accountTreeTo" autocomplete="off" />
                @Html.HiddenFor(m => m.AccountTreeToId)
            </div>
            <!--end::Input-->
        </div>
        <div class="col-lg-4">
            <div class="form-group required">
                <label>المبلغ</label>
                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", @style = "text-align:right;" })
            </div>
        </div>


        <div class="col-lg-12">
            <div class="form-group ">
                <label>البيان</label>
                @Html.TextAreaFor(m => m.Notes, new { @class = "form-control" })
            </div>
        </div>
    </div>
</div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12" style="text-align:left;">
                            @*<input type="button" onclick="VoucherReceipt_Module.SubmitForm(this);" value="@btn" class="btn btn-primary font-weight-bold btn-square btn-shadow din-bold w-100px" />*@
                            <a href="javascript:void(0);" onclick="VoucherReceipt_Module.Submit(this);" class="btn btn-primary font-weight-bold btn-square btn-shadow din-bold w-100px"><i class="@icon"></i>@btn</a>
                            @if (Model.Id != Guid.Empty)
                            {
            <a href="/VoucherReceipts/Index" class="btn btn-text-primary btn-hover-light-primary btn-square font-weight-bold mr-2 din-bold w-100px"><i class="@icon2"></i>عودة</a>}
                        </div>
                    </div>
                </div>}
        </div>
    </div>
    @if (Model.Id == Guid.Empty && ViewBag.LastRow != null)
    {
        var modl = ViewBag.LastRow as Voucher;

<div class="col-lg-12">
    <div class="card card-custom gutter-b">

        <div class="card-header">
            <div class="card-title">
                <h3 class="card-label">اخر بيان تم اضافته</h3>
            </div>
        </div>
        <div class="card-body">
            <!--begin::Example-->
            <div class="example mb-10">
                <table class="table table-hover mb-6">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">من حساب</th>
                            <th scope="col">الى حساب</th>
                            <th scope="col">المبلغ</th>
                            <th scope="col">التاريخ</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>@modl.AccountsTreeFrom.AccountName</td>
                            <td>@modl.AccountsTreeTo.AccountName</td>
                            <td>@modl.Amount</td>
                            <td>@modl.VoucherDate.Value.ToString("yyyy-MM-dd")</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!--end::Example-->
        </div>
    </div>
</div>}
</div>

@section Scripts
{
    <script src="~/Assets/JSCustom/VoucherReceipt.js"></script>
    <script>
        var accounTreeFrom;
        $(document).ready(function () {
            //دليل الحسابات
            var dsTree = [];
            $.get("/SharedDataSources/GetAccountsTrees", { selectedTree: false, showAllLevel: true }, function (data) {
                accounTree.setSource(data);
            });

            accounTree = $('#accountTreeTo').comboTree({
                source: dsTree,
                isMultiple: false,
                collapse: true,
                selected: ['@Model.AccountTreeToId']
                //selectableLastNode: true

            });
            accounTree.onChange(function () {
                if (accounTree.getSelectedIds() != null) {
                    $('#AccountTreeToId').val(accounTree.getSelectedIds()[0]);
                }
            });
            // ============== نهاية شجرة الحسابات
        });
    </script>
}